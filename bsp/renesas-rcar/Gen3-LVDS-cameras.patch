+	{ "ti9x4", 0 },
+	{ }
+};
+MODULE_DEVICE_TABLE(i2c, ti9x4_id);
+
+static struct i2c_driver ti9x4_i2c_driver = {
+	.driver	= {
+		.name		= "ti9x4",
+		.of_match_table	= of_match_ptr(ti9x4_dt_ids),
+	},
+	.probe		= ti9x4_probe,
+	.remove		= ti9x4_remove,
+	.id_table	= ti9x4_id,
+};
