+		ov490_remove(client);
+		break;
+	case ID_OV495_OV2775:
+		ov495_remove(client);
+		break;
+	case ID_AR0132:
+		ar0132_remove(client);
+		break;
+	case ID_AR0220:
+		ar0220_remove(client);
+		break;
+	case ID_AP0101_AR014X:
+		ap0101_remove(client);
+		break;
+	case ID_OV2775:
+		ov2775_remove(client);
+		break;
+	};
