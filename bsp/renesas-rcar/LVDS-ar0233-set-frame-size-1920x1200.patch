+++ b/drivers/media/i2c/soc_camera/ar0233.h
@@ -12,13 +12,13 @@
 //#define AR0233_DISPLAY_PATTERN_FIXED
 //#define AR0233_DISPLAY_PATTERN_COLOR_BAR
 
-#define AR0233_MAX_WIDTH	1792 //1920
-#define AR0233_MAX_HEIGHT	1080
