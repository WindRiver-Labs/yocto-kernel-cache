+			priv->gpio[i] = 0;
+	}
 
 	/*
 	 * CSI forwarding of all links is to CSI0 by default.
@@ -469,6 +487,14 @@ static int ti9x4_parse_dt(struct i2c_client *client)
 		priv->vc_map = vc_map;
 	if (csi_map)
 		priv->csi_map = csi_map;
+	if (gpio0)
+		priv->gpio[0] = gpio0;
+	if (gpio1)
+		priv->gpio[1] = gpio1;
+	if (gpio2)
+		priv->gpio[2] = gpio2;
+	if (gpio3)
+		priv->gpio[3] = gpio3;
 
