+static int cmd_cbs_get(struct genl_info *info)
+{
+	struct nlattr *na, *cbsattr;
+	struct nlattr *cbsa[TSN_CBS_ATTR_MAX + 1];
+	char *portname;
+	struct net_device *netdev;
+	const struct tsn_ops *tsnops;
