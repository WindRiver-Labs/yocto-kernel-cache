+	int count = 0;
+
+	/*read data */
+	na = info->attrs[TSN_ATTR_IFNAME];
+	if (!na)
+		return -EINVAL;
+
+	portname = (char *)nla_data(na);
+	netdev = __dev_get_by_name(genl_info_net(info), portname);
+
