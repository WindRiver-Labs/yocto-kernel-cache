From 98adb095052699e28b2cc30ae1e427b8b923b636 Mon Sep 17 00:00:00 2001
From: Wen He <wen.he_1@nxp.com>
Date: Thu, 29 Aug 2019 17:13:03 +0800
Subject: [PATCH 580/741] dts: arm64: ls1028a: Remove the hack of the pixel
 clock node

commit 98c9b8606298023e2677d67a7b12f07a409f0419 from
http://source.codeaurora.org/external/qoriq/qoriq-components/linux

Remove the hack of the pixel clock node.

Signed-off-by: Wen He <wen.he_1@nxp.com>
Signed-off-by: Zhantao Tang <zhantao.tang@windriver.com>
---
 arch/arm64/boot/dts/freescale/fsl-ls1028a.dtsi | 7 +++----
 1 file changed, 3 insertions(+), 4 deletions(-)

diff --git a/arch/arm64/boot/dts/freescale/fsl-ls1028a.dtsi b/arch/arm64/boot/dts/freescale/fsl-ls1028a.dtsi
index 29911cdda0b7..31c3449cc91d 100644
--- a/arch/arm64/boot/dts/freescale/fsl-ls1028a.dtsi
+++ b/arch/arm64/boot/dts/freescale/fsl-ls1028a.dtsi
@@ -834,11 +834,10 @@
 
         display1: hdp@f200000 {
                 compatible = "fsl,ls1028a-dp";
-                reg = <0x0 0xf1f0000 0x0 0xffff>,
-                    <0x0 0xf200000 0x0 0xfffff>;
+		reg = <0x0 0xf200000 0x0 0xfffff>;
                 interrupts = <0 221 IRQ_TYPE_LEVEL_HIGH>;
-                clocks = <&sysclk>, <&hdpclk>, <&dpclk>,
-                         <&dpclk>, <&dpclk>, <&pclk>, <&dpclk>;
+                clocks = <&sysclk>, <&hdpclk>, <&hdpclk>,
+                         <&hdpclk>, <&hdpclk>, <&hdpclk>, <&hdpclk>;
                 clock-names = "clk_ipg", "clk_core", "clk_pxl",
                               "clk_pxl_mux", "clk_pxl_link", "clk_apb",
                               "clk_vif";
