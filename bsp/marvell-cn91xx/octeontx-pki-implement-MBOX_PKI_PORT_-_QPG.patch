+						   mdata);
+		break;
+	case MBOX_PKI_PORT_FREE_QPG:
+		hdr->res_code = pki_port_free_qpg(vf, hdr->vfid,
+						  mdata);
+		break;
 	case MBOX_PKI_PORT_START:
 		hdr->res_code = pki_port_start(vf, hdr->vfid, mdata);
 		break;
