+	}
 
 	/* MMIC */
 	if ((status->flag & RX_FLAG_MMIC_STRIPPED) &&
@@ -1052,7 +1074,8 @@ static void ath10k_htt_rx_h_undecap_raw(struct ath10k *ar,
