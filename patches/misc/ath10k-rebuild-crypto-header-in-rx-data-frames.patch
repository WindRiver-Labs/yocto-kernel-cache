 		hdr = (void *)msdu->data;
 		hdr->frame_control &= ~__cpu_to_le16(IEEE80211_FCTL_PROTECTED);
 	}
@@ -1411,6 +1473,9 @@ static void ath10k_htt_rx_h_deliver(struct ath10k *ar,
