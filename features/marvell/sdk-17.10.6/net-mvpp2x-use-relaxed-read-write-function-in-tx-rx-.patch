+	mv_pp2x_relaxed_write(hw, MVPP2_BM_VIRT_RLS_REG,
+			      lower_32_bits((uintptr_t)buf_virt_addr));
+	mv_pp2x_relaxed_write(hw, MVPP2_BM_PHY_RLS_REG(pool),
 		      lower_32_bits(buf_phys_addr));
 
