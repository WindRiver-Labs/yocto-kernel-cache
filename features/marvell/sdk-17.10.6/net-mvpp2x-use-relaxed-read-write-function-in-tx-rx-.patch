+{
+	void *reg_ptr = hw->cpu_base[smp_processor_id()] + offset;
+	u32 val;
+
+	val = readl_relaxed(reg_ptr);
+	return val;
+}
+EXPORT_SYMBOL(mv_pp2x_relaxed_read);
