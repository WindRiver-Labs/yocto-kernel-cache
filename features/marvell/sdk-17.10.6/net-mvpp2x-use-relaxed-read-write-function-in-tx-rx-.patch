 {
 #if defined(MVPP2_DEBUG) && !defined(CONFIG_MV_PP2_PALLADIUM)
@@ -125,6 +135,18 @@ u32 mv_pp2x_read(struct mv_pp2x_hw *hw, u32 offset)
 }
 EXPORT_SYMBOL(mv_pp2x_read);
 
